<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/chose_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"
        />
    <TextView 
        android:id="@+id/chose_list_hint1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/input_hint1"
        android:gravity="center"
        />
    <TextView 
        android:id="@+id/chose_list_hint2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/input_hint2"
        android:gravity="center"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
    <AutoCompleteTextView 
        android:id="@+id/chose_auto_input"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="3"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="10dp"
        android:paddingTop="25dp"
        android:completionThreshold="2"
        />
    <Button 
        android:id="@+id/chose_button_ok"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/chose_ok"
        />
    
    </LinearLayout>
  
    
  

</LinearLayout>
