<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/insert_schedule_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/schedule_name"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/insert_schedule_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="26sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/schedule_teacher"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/insert_schedule_teacher"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="26sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/schedule_place"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/insert_schedule_place"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="26sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/schedule_week"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/insert_schedule_week"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="26sp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/insert_schedule_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>