<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/chose_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/chose_list_hint1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ohers_schedule_input_hint1"
        android:gravity="center" />

    <TextView
        android:id="@+id/chose_list_hint2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ohers_schedule_input_hint2"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/stu_id_input"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="3"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:maxLength="10"
            android:paddingTop="25dp" />

        <Button
            android:id="@+id/input_button_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/chose_ok" />

    </LinearLayout>


</LinearLayout>
